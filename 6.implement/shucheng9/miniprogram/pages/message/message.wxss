
.list_box {
    width: 100%;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    margin-top: 10rpx;
    font-size: 10rpx;
  }
  
  .blank_text {
    padding-top: 40rpx;
    font-size: 32rpx;
    letter-spacing: 2rpx;
    color: #c6c6c8;
  }
  
  .messageitems{
    width:100%;
    height: 8rem;
    background: #ffffff;
    text-align:center;
    display: grid;
    grid-template-columns: 33% 64%;
    grid-template-rows: 100% ;
    
    padding-left: 5px;
    border-bottom: 1px solid #c9c1c1;
  }
  .messageimg{
    display: flex;
    justify-items: center;
    align-items: center;
  }
  .messageimg img{
    width: 100%;
    height: 90%;
    display: flex;
    background-color: #ebe2e2;
    
  }
  .messageinfo{
    display: grid;
    grid-template-columns: 95%;
    grid-template-rows: 20% 50% 20% ;
  
  }
  .messageimg img{
    src: url(https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg);
  }
  .messagebottom{
    position: fixed;
    display: flex;
    float: left;
    width: 80%;
    bottom:10px;
    justify-content: center;
  }
